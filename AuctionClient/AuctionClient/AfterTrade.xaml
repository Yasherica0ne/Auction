<Page x:Class="AuctionClient.AfterTrade"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuctionClient"
      mc:Ignorable="d" d:DesignWidth="300"
      Title="AfterTrade" Width="700" Height="380.5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="471*"/>
            <ColumnDefinition Width="229*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="BeforeTradeFrame" Margin="0,36,10,33" />
        <TextBlock x:Name="NextProduct" TextAlignment="Center" Height="34" Margin="20,2,10,0" TextWrapping="Wrap" Text="Следующий лот" FontSize="22" VerticalAlignment="Top"/>
        <Border BorderThickness="1" Margin="0,-3,0,0" HorizontalAlignment="Right" Width="5" Background="#FF919191"/>
        <TextBlock HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" Text="Начало в " FontSize="18" VerticalAlignment="Bottom" Width="83"/>
        <TextBlock Text="{Binding TradeStartTime}" HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" FontSize="18" VerticalAlignment="Bottom" Width="378" Margin="88,0,0,0"/>
    </Grid>
</Page>
